<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_register_user_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@color/red"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:background="@color/gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="半价特卖账号注册" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            android:background="@color/gray" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="#ffff"
            android:id="@+id/et_register_user_username"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:hint="请输入手机号"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:inputType="phone"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="#ffff"
            android:id="@+id/et_register_user_code"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:hint="请输入验证码"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:inputType="number"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_register_user_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="#ffff"
            android:id="@+id/et_register_user_set_password"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:hint="设置密码(6-20位字符)"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:inputType="phone"
            android:layout_height="match_parent" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="#ffff"
            android:id="@+id/et_register_recommend_user"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:hint="推荐人手机号(推荐)"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:inputType="phone"
            android:layout_height="match_parent" />

    </RelativeLayout>



    <Button
        android:id="@+id/btn_register_user_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="立即注册"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
</LinearLayout>

